         <configurationType
               id="RunJettyRunWebApp">
         </configurationType>
         <description
               description="Run Jetty Web App"
               mode="run">
         </description>
         <description
               description="Debug Jetty Web App"
               mode="debug">
         </description>
       </shortcut>
    </extension>
</plugin>
